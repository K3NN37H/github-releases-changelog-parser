{
  "include": ["src/**/*"],
  "typeAcquisition": {
    "enable": true,
    "include": ["react", "react-dom", "react-markdown"]
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2018",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist"
  }
}